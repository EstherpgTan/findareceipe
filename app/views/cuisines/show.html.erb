<h1>
  Our
  <%= @cuisine.style %>
  dishes
</h1>

<ul>
  <% @cuisine.recipes.each do |r| %>
    <li>
      <%= link_to( r.name, recipe_path( r.id ) ) %>
    </li>
  <% end %>
</ul>

<div class="controls">
  <%= link_to "Edit Cuisine", edit_cuisine_path( @cuisine.id ) %> |
  <%= link_to "Delete Cuisine", cuisine_path( @cuisine.id ), method: :delete, data: { confirm: "Are you sure?" } %>
</div>
